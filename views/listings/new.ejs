<% layout("/layouts/boilerplate") %>
<body>
    <div class="row new">
        <div class="col-8 offset-2">
            <h2> Create a New Post</h2>
            <form method="POST" action="/listings" class=" needs-validation add-new" novalidate enctype="multipart/form-data" >
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter the Title" class="form-control" required>
                    <div class="valid-feedback">Title Looking good!</div>
                    <div class="invalid-feedback">Invalid Title!</div>
                   
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter the Description" rows="5" cols="30"
                        class="form-control" required></textarea>
                    <div class="valid-feedback">Description Looking good!</div>
                    <div class="invalid-feedback">Please enter a short Description!</div>
        
                </div>
                <!-- <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" placeholder="Enter the Image(url)" class="form-control" >
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image]" class="form-control" required >
                    <div class="valid-feedback">Uploaded</div>
                    <div class="invalid-feedback">Upload a Image!</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="100" class="form-control" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback">Invalid Price!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Enter the Country" class="form-control" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback">Invalid Country!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter the Location" class="form-control" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please Enter valid Location!</div>
                </div>
                <br>
                <button type="submit" class="btn btn-dark">ADD</button>
            </form>
        </div>
    </div>
    
</body>
